            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.996" />

        <TextView
            android:id="@+id/dayX_TV"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:text="DAY X"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.389" />

        <TextView
            android:id="@+id/current_day_TV"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:text="01.01.1999"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.452" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/premium_TV_1"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_marginBottom="350sp"
        android:text="Buy premium to unlock many features!"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/premium_TV_2"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_marginBottom="325sp"
        android:text="You will be able to add activities!"
        android:layout_marginEnd="30sp"
        android:layout_marginStart="30sp"
        android:textAlignment="center"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/premium_TV_3"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_marginBottom="300sp"
