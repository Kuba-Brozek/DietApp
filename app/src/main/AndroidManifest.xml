<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dietapp2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScheduleApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.dietapp2.registerlogin.register.userDataInput.AfterRegistrationActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.dietapp2.fragments.homeactivity.HomeActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.dietapp2.registerlogin.activityreglog.LogRegActivity"
            android:exported="true"/>
        <activity
            android:name="com.example.dietapp2.fragments.usersettings.ChangePersonalInfoActivity"
            android:exported="true" />
        <activity
            android:name="com.example.dietapp2.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>